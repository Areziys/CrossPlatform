@model IEnumerable<MvcApplication1.Models.Equipment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypesOfEquipment.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TerialNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypesOfEquipment.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TerialNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Equipment</legend>

        <div class="editor-label">
            @Html.LabelFor(model => new MvcApplication1.Models.Equipment().Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => new MvcApplication1.Models.Equipment().Name)
            @Html.ValidationMessageFor(model => new MvcApplication1.Models.Equipment().Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => new MvcApplication1.Models.Equipment().Type, "TypesOfEquipment")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => new MvcApplication1.Models.Equipment().Type)
            @Html.ValidationMessageFor(model => new MvcApplication1.Models.Equipment().Type)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => new MvcApplication1.Models.Equipment().TerialNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => new MvcApplication1.Models.Equipment().TerialNumber)
            @Html.ValidationMessageFor(model => new MvcApplication1.Models.Equipment().TerialNumber)
        </div>

        <p>
            <input type="submit" value="Index" />
        </p>
    </fieldset>
}
@section Scripts {
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>
}